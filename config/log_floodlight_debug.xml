<configuration scan="true">
      <!--appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender"-->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>/var/log/floodlight/floodlight_debug.log</file>
    <encoder>
      <pattern>%date{yyyy-MM-dd HH:mm:ss.S} %-5level [%logger{15}] %msg%n</pattern>
    </encoder>
  </appender>
  <root level="INFO">
    <appender-ref ref="FILE" />
  </root>
  <logger name="io" level="INFO"></logger> <!-- Netty logging -->
  <logger name="LogService" level="WARN"/> <!-- Restlet access logging -->
  <logger name="net.floodlightcontroller" level="INFO"/>
  <logger name="net.floodlightcontroller.resmon" level="DEBUG"/>
  <logger name="net.floodlightcontroller.devicemaager" level="DEBUG"/>
  <logger name="net.floodlightcontroller.dhcpserver" level="DEBUG"/>
  <logger name="net.floodlightcontroller.forwarding" level="DEBUG"/>
  <logger name="net.floodlightcontroller.statistics" level="DEBUG"/>
  <logger name="net.floodlightcontroller.routing" level="TRACE"/>
  <logger name="org.sdnplatform" level="INFO"/>
</configuration>