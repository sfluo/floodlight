<configuration scan="true">
      <!--appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender"-->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>/var/log/floodlight/floodlight_debug_all.log</file>
    <encoder>
      <pattern>%date{yyyy-MM-dd HH:mm:ss.S} %-5level [%logger{15}] %msg%n</pattern>
    </encoder>
  </appender>
  <root level="INFO">
    <appender-ref ref="FILE" />
  </root>
  <logger name="io" level="INFO"></logger> 
  <logger name="LogService" level="WARN"/> 
  <logger name="net.floodlightcontroller" level="DEBUG"/>
  <logger name="org.sdnplatform" level="INFO"/>
</configuration>